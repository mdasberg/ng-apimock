{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "es2015",
      "dom"
    ],
    "sourceMap": true,
    "pretty": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitUseStrict": false,
    "noFallthroughCasesInSwitch": true,
    "inlineSources": true,
    "typeRoots": [
      "node_modules/@types",
      "node_modules"
    ],
    "types": [
      "async",
      "chokidar",
      "fs-extra",
      "glob",
      "node"
    ]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "built",
    "node_modules",
    "results",
    "test"
  ]
}
